# ─── Java (plugin) ──────────────────────────────────────
export JAVA_HOME=/opt/homebrew/opt/openjdk@17/libexec/openjdk.jdk/Contents/Home
export PATH="$JAVA_HOME/bin:$PATH"

# ─── Go tool wrappers (go-client) ──────────────────────
golangci-lint() {
  go tool -modfile=go-client/tools/lint/go.mod golangci-lint "$@"
}
export -f golangci-lint

gotestsum() {
  go tool -modfile=go-client/tools.go.mod gotestsum "$@"
}
export -f gotestsum

# ─── Git hooks ──────────────────────────────────────────
if command -v lefthook &> /dev/null; then
  lefthook install 2>/dev/null
fi
